# IceMaker Environment Variables
# Copy this file to .env and fill in values

# ============================================
# REQUIRED IN PRODUCTION
# ============================================

# PostgreSQL connection string (required)
DATABASE_URL=postgresql://user:password@localhost:5432/icemaker

# Token signing secret for public access tokens (required in production)
# Generate with: openssl rand -hex 32
PUBLIC_TOKEN_SECRET=your-32-char-hex-secret-here

# Session secret for authentication cookies
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-session-secret-here

# ============================================
# APPLICATION CONFIG
# ============================================

# Public URL of the application (used for callbacks, webhooks, emails)
PUBLIC_APP_URL=https://your-app.onrender.com

# Email sender address
EMAIL_FROM_ADDRESS=hello@yourdomain.com

# ============================================
# STRIPE (Required for payments)
# ============================================

# Stripe API keys (from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Stripe webhook signing secret (from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# AI PROVIDERS
# ============================================

# OpenAI API key for chat/image/TTS (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# Replicate API token for video generation (from https://replicate.com/account/api-tokens)
REPLICATE_API_TOKEN=r8_...

# Kling API credentials for premium video (optional)
KLING_ACCESS_KEY=
KLING_SECRET_KEY=

# ============================================
# EMAIL (Resend)
# ============================================

# Resend API key for transactional emails (from https://resend.com/api-keys)
RESEND_API_KEY=re_...

# ============================================
# OBJECT STORAGE (S3-compatible / Cloudflare R2)
# ============================================

# R2/S3 endpoint URL
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# R2/S3 credentials
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=icemaker-assets

# Public URL for accessing stored files
R2_PUBLIC_BASE_URL=https://assets.yourdomain.com

# ============================================
# BUILD METADATA (Auto-populated)
# ============================================

VITE_GIT_COMMIT_HASH=
VITE_BUILD_TIMESTAMP=
